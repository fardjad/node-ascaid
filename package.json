{
  "name": "ascaid",
  "type": "module",
  "version": "1.7.4",
  "description": "Hassle-free documentation generation powered by AsciiDoc",
  "author": "Fardjad Davari <public@fardjad.com>",
  "license": "MIT",
  "files": [
    "README.md",
    "index.js",
    "lib/",
    "cli/",
    "!lib/**/*.test.js",
    "!**/__fixtures__/"
  ],
  "keywords": [
    "asciidoc",
    "asciidoctor",
    "pandoc",
    "markdown",
    "confluence",
    "publish",
    "documentation"
  ],
  "scripts": {
    "prepare": "husky install",
    "fix": "eslint --fix . && prettier -w .",
    "test": "jest",
    "posttest": "eslint . && prettier -c ."
  },
  "bin": {
    "ascaid": "./cli/ascaid",
    "ascaid.js": "./cli/ascaid.js"
  },
  "main": "index.js",
  "dependencies": {
    "@asciidoctor/core": "^2.2.6",
    "browser-sync": "^2.27.10",
    "commander": "^9.4.1",
    "confluence-api": "^1.4.0",
    "execa": "^6.1.0",
    "glob": "^8.0.3",
    "pify": "^6.1.0",
    "strip-json-comments": "^5.0.0"
  },
  "repository": "git@github.com:fardjad/node-ascaid.git",
  "devDependencies": {
    "asciidoctor-kroki": "^0.16.0",
    "eslint": "^8.27.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-light-runner": "^0.4.1",
    "prettier": "^2.7.1"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
