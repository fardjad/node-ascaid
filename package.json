{
  "name": "ascaid",
  "type": "module",
  "version": "1.2.1",
  "description": "A collection of AsciiDoc tools",
  "author": "Fardjad Davari <public@fardjad.com>",
  "license": "MIT",
  "files": [
    "README.md",
    "index.js",
    "lib/",
    "cli/",
    "!lib/**/*.test.js",
    "!**/__fixtures__/"
  ],
  "keywords": [
    "asciidoc",
    "asciidoctor",
    "pandoc",
    "markdown",
    "confluence",
    "publish",
    "documentation",
    "kroki"
  ],
  "scripts": {
    "prepare": "husky install",
    "fix": "eslint --fix . && prettier -w .",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "posttest": "eslint . && prettier -c ."
  },
  "bin": {
    "ascaid": "./cli/ascaid",
    "ascaid.js": "./cli/ascaid.js"
  },
  "main": "index.js",
  "dependencies": {
    "@asciidoctor/core": "^2.2.5",
    "asciidoctor-kroki": "^0.14.0",
    "axios": "^0.24.0",
    "browser-sync": "^2.27.7",
    "commander": "^8.3.0",
    "cross-env": "^7.0.3",
    "execa": "^5.1.1",
    "glob": "^7.2.0"
  },
  "repository": "git@github.com:fardjad/node-ascaid.git",
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unicorn": "^38.0.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1"
  }
}
